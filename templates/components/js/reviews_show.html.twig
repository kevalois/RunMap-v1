<script>
	$(document).ready(function(){

		// I hide the reviews at the opening of the page
		$('.reviews').hide();
		$('.hide-reviews').hide();

		//post click
		$('.link-reviews').click(function(){
				$(".link-reviews").hide();
				$(".hide-reviews").show();
				$(".reviews").show();
		});

		// hidden click
		$('.hide-reviews').click(function(){
				$(".hide-reviews").hide();
				$(".link-reviews").show();
				$(".reviews").hide();	
		});
	});
</script>